if &term =~ "xterm"
    " SecureCRT versions prior to 6.1.x do not support 4-digit DECSET
    " let &t_ti = "\<Esc>[?1049h"
    " let &t_te = "\<Esc>[?1049l"
    " Use 2-digit DECSET instead
    set t_ti = "\<Esc>[?47h"
    set t_te = "\<Esc>[?47l"
endif

syntax on
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set cindent
set nu
